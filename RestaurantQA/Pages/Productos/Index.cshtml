@page
@using Restaurant.Entities
@model Restaurant.Pages.Productos.ProductosModel
@{
    ViewData["Title"] = "Gesti√≥n de Productos";
}

<h2>Gesti√≥n de Productos</h2>

<form method="post">
    <input type="hidden" asp-for="Producto.Id" />

    <div class="mb-2">
        <label>Nombre</label>
        <input asp-for="Producto.Nombre" class="form-control" />
    </div>
    
    <div class="mb-2">
        <label>Precio</label>
        <input asp-for="Producto.Precio" step="0.01" class="form-control" />
    </div>
    
    <div class="mb-2">
        <label>Stock</label>
        <input asp-for="Producto.Stock" class="form-control" />
    </div>
    
    <div class="mb-2">
        <label>Descripcion</label>
        <input asp-for="Producto.Descripcion" class="form-control" />
    </div>
    
    <div class="mb-2">
        <label>Categor√≠a ID</label>
        <input asp-for="Producto.CategoriaId" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary mt-2">
        @(Model.Producto.Id > 0 ? "Actualizar" : "Guardar")
    </button>
</form>

<hr />

<h4>Lista de productos</h4>

<!-- üîç Buscador -->
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" value="@Request.Query["searchTerm"]" class="form-control" placeholder="Buscar producto..." />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Categor√≠a</th>
        <th>Descripcion</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model.Productos)
    {
        <tr>
            <td>@p.Nombre</td>
            <td>@p.Precio</td>
            <td>@p.Stock</td>
            <td>@p.CategoriaId</td>
            <td>@p.Descripcion</td>
            <td>
                <a asp-page="./Index" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Editar</a>

                <form method="post" asp-page-handler="Eliminar" asp-route-id="@p.Id" style="display:inline">
                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
