@page
@using Restaurant.Entities
@model Restaurant.Pages.Clientes.ClientesModel
@{
    ViewData["Title"] = "Gestión de Clientes";
}

<h2>Gestión de Clientes</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Buscar cliente..." />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Limpiar</a>
        <a asp-page="./Create" class="btn btn-success ms-2">Nuevo Cliente</a>
    </div>
</form>

<hr />

<h4>Lista de clientes</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Clientes)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Apellido</td>
                <td>@c.Telefono</td>
                <td>@c.Correo</td>
                <td>
                    <a asp-page="./Create" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Editar</a>
                    <form method="post" asp-page-handler="Eliminar" asp-route-id="@c.Id" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Paginación">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm">@i</a>
                </li>
            }
        </ul>
    </nav>
}
