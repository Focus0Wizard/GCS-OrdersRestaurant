@page "{id?}"
@model Restaurant.Pages.Clientes.CreateModel
@{
    var esEdicion = Model.Cliente?.Id > 0;
    ViewData["Title"] = esEdicion ? "Editar Cliente" : "Registrar Cliente";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Cliente.Id" />

    <div class="mb-2">
        <label>Nombre</label>
        <input asp-for="Cliente.Nombre" class="form-control" />
        <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Apellido</label>
        <input asp-for="Cliente.Apellido" class="form-control" />
        <span asp-validation-for="Cliente.Apellido" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Tel√©fono</label>
        <input asp-for="Cliente.Telefono" class="form-control" />
        <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Correo</label>
        <input asp-for="Cliente.Correo" class="form-control" />
        <span asp-validation-for="Cliente.Correo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">
        @(esEdicion ? "Actualizar" : "Guardar")
    </button>
    <a asp-page="./Index" class="btn btn-secondary mt-2">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
